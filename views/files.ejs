<body>
  <header>
    <nav class="nav bg-dark navbar-expand-lg nav-responsive-font">
      <a class="navbar-brand text-light text-decoration-none pt-2 ps-2">
        Office Resources and Management Assistant
      </a>
      <ul
        class="navbar-nav text-light bg-dark ms-auto"
        style="flex-direction: row"
      >
        <li class="nav-item ps-0">
          <a class="nav-link active ps-3 pe-2" id="index" name="index" href="/">
            Home
          </a>
        </li>
        <li class="nav-item ps-0">
          <a
            class="nav-link active ps-3 pe-2"
            id="info"
            name="info"
            href="/generalInfo"
          >
            General Info
          </a>
        </li>
        <li class="nav-item ps-0">
          <a
            class="nav-link active ps-3 pe-2"
            id="userPortal"
            name="userPortal"
            href="/userPortal"
          >
            Dashboard
          </a>
        </li>
        <% if (admin) { %>
          <li class="nav-item ps-3 pe-2">
            <a
              class="nav-link active"
              id="adminPortal"
              name="adminPortal"
              href="/adminPortal"
            >
              Admin
            </a>
          </li>
          <%} else { %>
          <li class="nav-item ps-3 pe-2">
            <a
              class="nav-link active"
              id="userProfile"
              name="userProfile"
              href="/userProfile"
            >
              Profile
            </a>
          </li>
          <% } %>
        <li class="nav-item ps-3 pe-2">
          <a class="nav-link active" id="logout" name="logout" href="/logout">
            Logout
          </a>
        </li>
      </ul>
    </nav>
  </header>
  <section class="d-flex justify-content-start">
    <div class="container d-flex rounded p-0 form-1">
      <form 
        class="fixed-width"
        ref="fileUpload"
        id="uploadForm"
        action="/files/upload"
        enctype="multipart/form-data"
        method="post"
      >
        <input class="form-control" type="file" id="myFile" name="file" />
        <input class="form-control bg-dark text-light" type="submit" id="upload" name="upload" value="Upload" />
      </form>
    </div>
  </section>
  <section class="d-flex flex-column section-responsive-files">
    
    <div class="grid-container-header text-light mb-2">
      <div class="header-direction file-header bg-dark text-light " style="font-family: Arial, Helvetica, sans-serif; font-size: 100%;" >
          <span class="align-items-center ms-3" style="min-width: 50%; font-weight: bold;"  id="fileHeader" name="fileHeader"> 
            File Server 
          </span>
        </div>

      </div>
    </section>
    <% for(var i=0; i<listContents.length; i++) {%>

     <section class="section-responsive-files"> 
     <div class="grid-container-files text-light mb-2 section-responsive-files">       
        
      <div class="file-data file-data-dir bg-info text-light align-items-center">

          <div class="grid-container-fileInfo ms-3" id="<%= listContents[i].Key %>" name="<%= listContents[i].Key %>"> 
          
              <div class="file-info-1"> 
              <i class="fa-regular fa-file-lines"></i>
                    : <%= listContents[i].Key %> &nbsp 
              </div>

              <div class="file-info-2"> 
                <i class="fa-regular fa-calendar"></i>
                    : <%= listContents[i].LastModified.toLocaleDateString() %> &nbsp 
              </div>

              <div class="file-info-3">
                <i class="fa-regular fa-floppy-disk"></i>
                    : <%= (listContents[i].Size/1024).toFixed(1) %>kb    
            </div>    

          </div>
      </div>

        <div class="file-req-form file-form-dir">    
          <form method="GET"  class="file-req-form form-btn" style="font-size:small;">
            <input type="hidden" name="_method" value="GET"/>
            <button class="btn-typography primary-colour-scheme btn-details-secondary" style="height:50%;" formaction="/files/download/<%= listContents[i].Key %>"> Download </button>
            <input type="hidden" name="_method" value="GET"/>
            <button class="btn-typography primary-colour-scheme btn-details-secondary" style="height:50%;" formaction="/files/delete/<%= listContents[i].Key %>"> Delete </button>
          </form>
        </div>

      </div>
    </section>
      <% } %>


  <div class="wrapper-files"></div>

  <footer class="footer">
    <div class="footer-header">
      Quicklinks for Filing Documents
    </div>
    <div class="push"></div>
    <div class="grid-container-footer">
  
      <div class="foot-1"> 
        <a class="nav-link active" href="https://qb-filing.alberta.ca/">
            Alberta Court of Kings's Bench Digital Filing
        </a>
      </div>
  
      <div class="foot-2"> 
        <a class="nav-link active foot-2" href="https://cams.albertacourts.ca/public-portal/?q=node/403">
          Alberta Court of Appeal Cams Digital Filing
        </a>
      </div>
  
      <div class="foot-3"> 
        <a class="nav-link active foot-3" href="https://surrogate.alberta.ca/">
          Alberta King's Bench (Surrogate) Digital Filing 
        </a>
      </div>
    
    </div>
  </footer>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"
  ></script>
</body>
