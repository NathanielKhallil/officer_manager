<body>
  <header>
    <nav class="nav bg-dark navbar-expand-lg">
      <a class="navbar-brand text-light text-decoration-none pt-2 ps-4">
        Office Resources and Management Assistant
      </a>
      <ul
        class="navbar-nav text-light bg-dark ms-auto"
        style="flex-direction: row"
      >
        <li class="nav-item ps-0">
          <a class="nav-link active ps-3 pe-2" id="info" name="info">
            General Info
          </a>
        </li>
        <li class="nav-item ps-0">
          <a
            class="nav-link active ps-3 pe-2"
            id="userPortal"
            name="userPortal"
            href="/userPortal"
          >
            Dashboard
          </a>
        </li>
        <li class="nav-item ps-0">
          <a class="nav-link active ps-3 pe-2" id="index" name="index" href="/">
            Home
          </a>
        </li>
        <li class="nav-item ps-3 pe-2">
          <a class="nav-link active" id="logout" name="logout" href="/logout">
            Logout
          </a>
        </li>
      </ul>
    </nav>
  </header>
  <section class="d-flex justify-content-start">
    <div class="container d-flex justify-content-center rounded p-0" style="width: 26rem; margin: 2rem 0 2rem 0;">
      <form
      
        ref="fileUpload"
        id="uploadForm"
        action="/files/upload"
        enctype="multipart/form-data"
        method="post"
      >
        <input class="form-control" type="file" id="myFile" name="file" />
        <input class="form-control bg-dark text-light" type="submit" id="upload" name="upload" value="Upload" />
      </form>
    </div>
  </section>
  <section>
    <div class="grid-container-files text-light mb-2" style="width: 50%; min-height: 5rem;margin: 0 auto; ">
      <div class="d-flex flex-row file-data bg-dark text-light " style="width: 100%; font-family: Arial, Helvetica, sans-serif; font-size: 100%;" >
            
        <span class="d-flex align-items-center ms-3" id="fileHeader" name="fileHeader"> File Server <span>
      </div>
      <div class="d-flex flex-row justify-content-center align-items-center bg-dark" style="width:10rem;"> Action </div>
    </div>
  </section>
  <section class="d-flex flex-column justify-content-center">
    <% for(var i=0; i<listContents.length; i++) {%>
      <div class="grid-container-files text-light mb-2" style="width: 50%; min-height: 100%;margin: 0 auto;">
        
        <div class="d-flex flex-row file-data bg-info text-light " style="width: 100%; font-family: Arial, Helvetica, sans-serif; font-size: 100%;" >
            
          <span class="d-flex align-items-center ms-3" id="<%= listContents[i].Key %>" name="<%= listContents[i].Key %>"> <i class="fa-regular fa-file-lines"></i>: &nbsp  <%= listContents[i].Key %> &nbsp <i class="fa-regular fa-calendar"></i>: <%= listContents[i].LastModified.toLocaleDateString() %> &nbsp <i class="fa-regular fa-floppy-disk"></i>: <%= (listContents[i].Size/1024).toFixed(1) %>kb  <span>
        </div>
          <div class="d-flex flex-column justify-content-center" style="width:10rem;">
            <form method="GET"  class="d-flex flex-column justify-content-start file-req-form" style="margin: 0 auto; max-width: 100%; min-height: 100%; font-size:small">
              <input type="hidden" name="_method" value="GET"/>
              <button class="btn bg-dark text-light download-btn" style="width: 10rem; border-radius: 0; height: 5rem;" formaction="/files/download/<%= listContents[i].Key %>"> Download </button>
              <input type="hidden" name="_method" value="GET"/>
              <button class="btn bg-dark text-light del-btn"  style="width: 10rem; border-radius: 0; height: 5rem;" formaction="/files/delete/<%= listContents[i].Key %>"> Delete </button>
            </form>
          </div>

        </div>
          <% } %>
      </section>

  <div class="wrapper"></div>

  <footer class="footer">
    <div class="footer-header">Quicklinks for Filing Documents</div>
    <div class="push"></div>
    <div class="container">
      <div class="row">
        <div class="col">
          <a class="nav-link active" href="https://qb-filing.alberta.ca/">
            Alberta Court of Queen's Bench Digital Filing
          </a>
        </div>
        <div class="col">
          <a
            class="nav-link active"
            href="https://cams.albertacourts.ca/public-portal/?q=node/403"
          >
            Alberta Court of Appeal Cams Digital Filing
          </a>
        </div>
        <div class="col">
          <a class="nav-link active" href="https://surrogate.alberta.ca/">
            Alberta Queen's Bench (Surrogate) Digital Filing
          </a>
        </div>
      </div>
    </div>
  </footer>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"
  ></script>
</body>
