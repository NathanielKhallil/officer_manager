<% var loggedIn; %>
  <body>
    <header>
      <nav class="nav bg-dark navbar-expand-lg">
        <a class="navbar-brand text-light text-decoration-none pt-2 ps-4">
          Office Resources and Management Assistant
        </a>
        <ul
          class="navbar-nav text-light bg-dark ms-auto"
          style="flex-direction: row"
        >
          <li class="nav-item ps-0">
            <a class="nav-link active" id="info" name="info"> General Info </a>
          </li>
          <% if (loggedIn) { %>
          <li class="nav-item ps-3 pe-2">
            <a class="nav-link active" id="userPortal" name="userPortal" href="/userPortal"> Dashboard </a>
          </li>
          <li class="nav-item ps-3 pe-2">
              <a class="nav-link active" id="logout" name="logout" href="/logout"> Logout </a>
            </li>
            <%} else { %>
              <li class="nav-item ps-3 pe-2">
              <a class="nav-link active" id="login" name="login" href="/login"> Login </a>
              </li>
              <% } %>
        </ul>
      </nav>
    </header>
      <main>
        <section class="container bg-secondary text-light rounded mt-5 p-2">
          <p>
            For general information regarding deadlines or filing rules, please
            select <i> General Info</i> next to the login button above.
          </p>
          <p>
            You can also find information regarding:
            <li>
              Contact information for the Court of Queen's Bench and
              the Court of Appeal
              </li>
              <li>
                Various office protocols
                </li>
          </p>
        </section>
        <section class="container bg-info text-light rounded mt-3 p-2">
          <p>Please login to gain access to or view the following:<br /></p>
          <ol>
            <li>Your customizable TO DO list</li>
            </li>
            <li>Shared matter list where matter files can be created, status viewed, updated and closed</li>
            <li>Temporary file upload</li>
                  </ol>
        </section>
      </main>
      <div class="wrapper"></div>
    <footer class="footer">
      <div class="footer-header">
        Quicklinks for Filing Documents
      </div>
      <div class="push"></div>
      <div class="container">
        <div class="row">
          <div class="col">
            <a class="nav-link active" href="https://qb-filing.alberta.ca/">
              Alberta Court of Queen's Bench Digital Filing
            </a>
          </div>
          <div class="col">
            <a class="nav-link active" href="https://cams.albertacourts.ca/public-portal/?q=node/403">
            Alberta Court of Appeal Cams Digital Filing
          </a>
          </div>
          <div class="col">
            <a class="nav-link active" href="https://surrogate.alberta.ca/">
            Alberta Queen's Bench (Surrogate) Digital Filing 
          </a>
          </div>
        </div>
      </div>
    </footer>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
      
    ></script>

  </body>

</html>
