        <section>
            <form
            class="form-outline rounded p-5"
            style="margin: 2rem auto 2rem auto;"
            action="/appointments"
            method="POST"
            >
                <h1 style="font-size: 130%">Add an appointment or deadline</h1>
                <div class="form-floating">
                <input
                    type="text"
                    id="title"
                    class="form-control mb-4"
                    placeholder="Title"
                    name="title" 
                    
                    />
                    <label for="title"  class="text-left"> Title</label>
                </div>
                <div class="form-floating">
                    <input
                    type="text"
                    class="form-control"
                    placeholder="xxx-xxx-xxxx"
                    name="phone" 
                    id="phone"
                    />
                    <label class="form-label text-left" for="phone"
                    >Phone:</label
                    >
                </div>
                <div class="form-floating">
                <input
                type="date"
                    class="form-control"
                    placeholder="Date"
                    name="date" 
                    id="date"
                    required
                />
                <label class="form-label text-left" for="date"
                    >Date:</label
                >
                </div>
                <div class="form-floating">
                <input
                type="time"
                class="form-control"
                placeholder="00:00"
                name="time" 
                id="time"
                />
                <label class="form-label text-left" for="time"
                >Time:</label
                >
                </div>

                <div class="form-floating">
                <input
                type="text"
                class="form-control"
                placeholder="Details"
                rows="3"
                name="notes" 
                id="notes"  
                />
                <label class="form-label text-left" for="notes"
                    >Notes:</label
                >
                </div>
                
                <div>
                    <label class="form-label text-left" for="new_client"
                    >Is this a new client?</label>
                </div>
                
                <div class="form-floating">
                <select class="bg-dark text-light" style="min-width: 100%; min-height: 2rem; outline: solid 1px;" id="new_client" name="new_client" onchange="getValue(this)">
                    <option value="true">true</option>
                    <option value="false">false</option>
                </select>
            
                </div>

            
            <button class="btn bg-info text-light justify-content-center" style="display: flex; margin: 1rem auto 0rem auto;" type="submit">
                Save Appointment / Deadline
            </button>  
        </form>     
    </section>

