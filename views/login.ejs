<body>
  <header>
    <nav class="nav bg-dark navbar-expand-lg nav-responsive-font">
      <a class="navbar-brand text-light text-decoration-none pt-2 ps-2">
        Office Resources and Management Assistant
      </a>
      <ul
        class="navbar-nav text-light bg-dark ms-auto"
        style="flex-direction: row"
      >
        <li class="nav-item ps-0">
          <a class="nav-link active" href="/info"> General Info </a>
        </li>
        <li class="nav-item ps-3 pe-2">
          <a class="nav-link active" href="/"> Home </a>
        </li>
      </ul>
    </nav>
  </header>
  <main>
    <% if (messages.error) { %> <%- messages.error %> <% } %>
    <form
      class="form-outline rounded p-5 form-margin"
      action="/login"
      method="POST"
    >
      <h1 style="font-size: 130%">Sign in to continue</h1>
      <div class="form-floating">
        <input
          type="text"
          id="username"
          class="form-control mb-4"
          placeholder="username"
          name="username"
          id="username"
        />
        <label for="username" class="text-left"> Username </label>
      </div>
      <div class="form-floating">
        <input
          type="password"
          id="password"
          class="form-control"
          placeholder="password"
          name="password"
          id="password"
        />
        <label class="form-label text-left" for="form2Example2">Password</label>
      </div>
      <div class="mt-4 align-content-center">
        <button
          type="submit"
          class="btn me-4 ps-4 pe-4 rounded bg-dark text-light"
        >
          Sign in
        </button>
        <button class="btn bg-danger text-light rounded">
          <a class="nav-link" href="/register"> New Account </a>
        </button>
      </div>

      <a class="d-flex mt-3" onClick="sendEmail()"> Forgot password?</a>
    </form>
  </main>

  <footer class="footer">
    <div class="footer-header">Quicklinks for Filing Documents</div>
    <div class="push"></div>
    <div class="grid-container-footer">
      <div class="foot-1">
        <a class="nav-link active" href="https://qb-filing.alberta.ca/">
          Alberta Court of Kings's Bench Digital Filing
        </a>
      </div>

      <div class="foot-2">
        <a
          class="nav-link active foot-2"
          href="https://cams.albertacourts.ca/public-portal/?q=node/403"
        >
          Alberta Court of Appeal Cams Digital Filing
        </a>
      </div>

      <div class="foot-3">
        <a class="nav-link active foot-3" href="https://surrogate.alberta.ca/">
          Alberta King's Bench (Surrogate) Digital Filing
        </a>
      </div>
    </div>
  </footer>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"
  ></script>
</body>
